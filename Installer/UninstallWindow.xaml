<Window
    x:Class="Installer.UninstallWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Installer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Uninstall NINI"
    Width="400"
    Height="350"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="pack://application:,,,/Installer;Component/Resources/icons8-spider-web-48.png" Stretch="None" />
            <TextBlock Height="10" />
            <TextBlock HorizontalAlignment="Center" Text="Program installed." />
            <TextBlock
                Height="30" />
            <Button
                Width="200"
                Height="30"
                Click="btnReinstall_Click">
                Repair
            </Button>
            <TextBlock
                Height="10" />
            <Button
                Width="200"
                Height="30"
                Click="btnUninstall_Click">
                Uninstall
            </Button>
        </StackPanel>
    </Grid>
</Window>
